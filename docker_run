docker run -d --volume /var/lib/mysql --name data_mysql --entrypoint /bin/echo busybox "mysql data-only container"

docker run -d -p 3306  --volumes-from data_mysql -e MYSQL_USER=uframework -e MYSQL_PASS=p4ssw0rd  -e ON_CREATE_DB=uframework  tutum/mysql

mysql uframework -hlocalhost -P3306 -uuframework -pp4ssw0rd < app/config/schema.sql
=
mysql uframework -hlocalhost -P3306 -uuframework -pp4ssw0rd
CREATE TABLE IF NOT EXISTS users ( id INT NOT NULL AUTO_INCREMENT, username VARCHAR(25) NOT NULL, password VARCHAR(500) NOT NULL, PRIMARY KEY (id)) ENGINE=InnoDB;
CREATE TABLE IF NOT EXISTS statuses ( id INT NOT NULL AUTO_INCREMENT, message VARCHAR(500) NOT NULL, user_id INT NOT NULL, date DATETIME NOT NULL, PRIMARY KEY (id), CONSTRAINT fk_user_id FOREIGN KEY (user_id) REFERENCES users(id)) ENGINE=InnoDB;

mode interactif 
( docker exec -i -t {id} /bin/bash )

docker run -d -p 3306 --volumes-from data_mysql tutum/mysql